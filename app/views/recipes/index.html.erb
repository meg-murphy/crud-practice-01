<div class="row">

  <% @recipes.each do |recipe| %>
    <div class="col-sm-4">
      <div class="well">
        <h2><%=recipe.name%></h2>
        <p><%=recipe.ingredients %></p>
        <p><%=recipe.directions %></p>
        <p><%=recipe.prep_time %><%=" hour"%></p>
      </div>
    </div>
  <%end%>

</div>

<div>
  <%= link_to "Add Recipe", "/recipes/new" %>
</div>
