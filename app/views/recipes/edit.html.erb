<%= form_tag "/recipes/#{@recipe.id}", method: :patch do %>
  <form class="form-inline">
    <div class="form-group">
       <%= text_field_tag :name, "#{@recipe.name}", class: "form-control"%>
    </div>
    <div class="form-group">
       <%= text_field_tag :prep_time, "#{@recipe.prep_time}", class: "form-control"%>
    </div>
    <div class="form-group">
       <%= text_field_tag :ingredients, "#{@recipe.ingredients}", class: "form-control"%>
    </div>
    <div class="form-group">
       <%= text_field_tag :directions, "#{@recipe.directions}", class: "form-control"%>
    </div>
    <div class="form-group">
       <%= text_field_tag :image, "#{@recipe.image}", class: "form-control"%>
    </div>
    <div>
      <%= submit_tag "Submit", class:"btn btn-default"%>
    </div>
  </div>
<% end %>
